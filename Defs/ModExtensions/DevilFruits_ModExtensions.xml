<Defs>
  <ModExtensionDef>
    <defName>DevilFruitExtension</defName>
    <extensionClass>DevilFruits.ModExtensionDevilFruit</extensionClass> <!-- C# class to read these fields -->
    <fields>
      <!-- Unique identifier for this fruit type, must match ThingDef & tracker fruitType -->
      <fruitType>GomuGomu</fruitType>

      <!-- Trait to grant on consumption -->
      <grantsTrait>RubberBody</grantsTrait>

      <!-- Hediff to apply for weakness -->
      <appliesHediff>WaterWeakness</appliesHediff>

      <!-- Optional: Visual effect (Mote) def name to spawn on use -->
      <moteOnUse>DevilFruit_Mote_Rubber</moteOnUse>
    </fields>
  </ModExtensionDef>
</Defs>