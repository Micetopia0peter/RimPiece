<Defs>
  <HediffDef>
    <defName>WaterWeakness</defName>
    <label>Water Weakness</label>
    <description>Painful sensitivity to water. The more moisture the pawn is exposed to, the greater the debuff.</description>
    <isBad>true</isBad>
    <tendable>false</tendable>
    <lethalSeverity>1.0</lethalSeverity>
    <initialSeverity>0.05</initialSeverity>

    <!-- You can tune this curve to increase severity with wetness -->
    <severityPerDay>0.02</severityPerDay>

    <!-- Stat offsets and factors when afflicted -->
    <statOffsets>
      <li>
        <stat>MoveSpeed</stat>
        <value>-0.2</value>
      </li>
    </statOffsets>
  </HediffDef>
</Defs>