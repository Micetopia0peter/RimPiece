<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>Hediff_ArmamentHaki</defName>
    <label>Armament Haki</label>
    <description>This pawn is coated in invisible Haki armor, increasing their melee strength and defense.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <initialSeverity>1.0</initialSeverity>
    <stages>
      <li>
        <statOffsets>
          <MeleeHitChance>0.15</MeleeHitChance>
          <MeleeDPS>0.6</MeleeDPS>
          <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>6000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
    </comps>
  </HediffDef>
</Defs>